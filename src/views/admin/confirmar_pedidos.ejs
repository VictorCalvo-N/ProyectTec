<%- include('../partials/admin_header', { title: 'Confirmar Pedidos de Saldo', loggedIn: loggedIn }) %>
<main>
  <h1>Confirmar Pedidos de Saldo</h1>
  <div class="confirmar-pedidos-container">
    <% if (pedidos && pedidos.length > 0) { %>
      <% pedidos.forEach(pedido => { %>
        <div class="pedido-detalle">
          <div class="detalle-item">
            <h2>Nombre de la persona</h2>
            <p><%= pedido.nombre_completo %></p>
          </div>
          <div class="detalle-item">
            <h2>Nombre del usuario</h2>
            <p><%= pedido.login %></p>
          </div>
          <div class="detalle-item">
            <h2>CÃ³digo del usuario</h2>
            <p><%= pedido.codigo %></p>
          </div>
          <div class="detalle-item">
            <h2>Saldo actual</h2>
            <p><%= pedido.saldo %></p>
          </div>
          <div class="detalle-item">
            <h2>Saldo solicitado</h2>
            <p><%= pedido.saldo_solicitado %></p>
          </div>
          <div class="detalle-item">
            <form action="/admin/confirmar_pedido" method="post">
              <input type="hidden" name="pedido_id" value="<%= pedido.id %>">
              <button type="submit">Confirmar</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No hay pedidos pendientes.</p>
    <% } %>
  </div>
</main>
<%- include('../partials/footer') %>
